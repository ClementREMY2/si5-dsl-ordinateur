app RedButton initial state off {
	bricks
		Actuator red_led : 12
		Actuator buzzer : 11
		Sensor button : 9
	
	states
		off {
			red_led <= LOW
			buzzer <= LOW
			button is HIGH => start_buzzing
		}
		start_buzzing {
			buzzer <= HIGH
			button is LOW => buzzing
		}
		buzzing {
			buzzer <= HIGH
			button is HIGH => start_led
		}
		start_led {
			buzzer <= LOW
			red_led <= HIGH
			button is LOW => led_on
		}
		led_on {
			red_led <= HIGH
			button is HIGH => start_off
		}
		start_off {
			red_led <= LOW
			button is LOW => off
		}
}

